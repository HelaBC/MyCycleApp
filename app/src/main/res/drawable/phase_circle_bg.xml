<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="oval">

    <!-- Light background for the phase circle -->
    <solid android:color="#D6F5D6" /> <!-- soft green background (matches follicular) -->

    <!-- Optional subtle border -->
    <stroke
        android:width="1dp"
        android:color="#A0E8A0" />

    <!-- Size (not required, controlled by layout) -->
