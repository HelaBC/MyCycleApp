<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:fillViewport="true"
    android:background="@color/background_light">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Top App Bar -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:paddingBottom="8dp">

            <ImageView
                android:id="@+id/btn_back"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/arrow_back"
                android:contentDescription="Back"
                android:layout_alignParentStart="true"
                app:tint="@color/text_primary" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Cycle Setup"
                android:textSize="18sp"
                android:textStyle="bold"
                android:gravity="center"/>

        </LinearLayout>

        <!-- Subtitle -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Let's get to know your cycle."
            android:textSize="16sp"
            android:paddingTop="8dp"
            android:paddingBottom="16dp"/>

        <!-- Last Period Start Date -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="When did your last period start?"
            android:textSize="14sp"
            android:paddingBottom="4dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:orientation="horizontal"
            android:background="@drawable/rounded_edittext"
            android:paddingStart="12dp"
            android:paddingEnd="12dp"
            android:gravity="center_vertical">

            <EditText
                android:id="@+id/et_last_period_date"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:hint="Select a date"
                android:focusable="false"
                android:clickable="true"/>

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/calendar"
                android:contentDescription="Calendar Icon"/>
        </LinearLayout>

        <!-- Period Duration -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="How long is your period on average?"
            android:textSize="14sp"
            android:paddingTop="12dp"
            android:paddingBottom="4dp"/>

        <EditText
            android:id="@+id/et_period_duration"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:hint="e.g., 5 days"
            android:inputType="number"
            android:background="@drawable/rounded_edittext"
            android:padding="12dp"/>

        <!-- Cycle Duration -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="How long is your cycle on average?"
            android:textSize="14sp"
            android:paddingTop="12dp"
            android:paddingBottom="4dp"/>

        <EditText
            android:id="@+id/et_cycle_duration"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:hint="e.g., 28 days"
            android:inputType="number"
            android:background="@drawable/rounded_edittext"
            android:padding="12dp"/>

        <!-- Symptoms Selection -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="What symptoms do you usually track? (Optional)"
            android:textSize="14sp"
            android:paddingTop="12dp"
            android:paddingBottom="4dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="start"
            android:layout_marginBottom="16dp"
            >

            <Button
                android:id="@+id/btn_cramps"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Cramps"
                android:textColor="@color/primary"
                android:backgroundTint="@color/symptom"
                android:padding="8dp"
                android:layout_marginEnd="4dp"/>

            <Button
                android:id="@+id/btn_headache"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Headache"
                android:textColor="@color/text_primary"
                android:backgroundTint="#D1CFCF"
                android:padding="8dp"
                android:layout_marginEnd="4dp"/>

            <Button
                android:id="@+id/btn_mood_swings"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Mood Swings"
                android:textColor="@color/text_primary"
                android:backgroundTint="#D1CFCF"
                android:padding="8dp"
                android:layout_marginEnd="4dp"/>
            <Button
                android:id="@+id/btn_bloating"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Bloating"
                android:textColor="@color/text_primary"
                android:backgroundTint="#D1CFCF"
                android:padding="8dp"
                android:layout_marginEnd="4dp"/>


            <!-- More symptoms can be added similarly -->
        </LinearLayout>

        <!-- Continue Button -->
        <Button
            android:id="@+id/btn_continue"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:text="Continue"
            android:textColor="@android:color/white"
            android:backgroundTint="@color/primary"
            android:textSize="16sp"
            android:layout_marginTop="24dp"
            />

        <TextView
            android:id="@+id/tv_skip"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Skip for now"
            android:gravity="center"
            android:textColor="@color/text_primary"
            android:textSize="14sp"
            android:layout_marginTop="12dp"
            android:clickable="true"
            android:focusable="true"/>
    </LinearLayout>
</ScrollView>
