<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/statistics_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/background_light">

    <!-- Top App Bar -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:background="@color/background_light">

        <ImageView
            android:id="@+id/back_icon"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/arrow_back"
            android:layout_alignParentStart="true"
            android:contentDescription="Back"
            app:tint="@color/neutral_dark"/>

        <TextView
            android:id="@+id/stats_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Statistics"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_centerInParent="true"/>
    </RelativeLayout>

    <!-- Scrollable content -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp"
            android:gap="16dp">

            <!-- Period Selector -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:orientation="horizontal"
                android:background="@drawable/card_bg_1"
                android:padding="4dp"
                android:gravity="center"
                android:weightSum="3">

                <!-- WEEK Button -->
                <Button
                    android:id="@+id/btn_week"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="Week"
                    android:textColor="@color/primary"
                    android:background="@drawable/btn_period_selected"
                    android:textStyle="bold"
                    android:textSize="14sp"/>

                <!-- MONTH Button -->
                <Button
                    android:id="@+id/btn_month"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="Month"
                    android:textColor="@color/text_secondary"

                    android:textSize="14sp"/>

                <!-- YEAR Button -->
                <Button
                    android:id="@+id/btn_year"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="Year"
                    android:textColor="@color/text_primary"
                    android:textSize="14sp"/>
            </LinearLayout>


            <!-- Symptom Frequency -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp"
                android:layout_marginTop="24dp"
                android:background="@drawable/card_bg_1"
                android:layout_gravity="center_horizontal"
                android:gravity="center_horizontal"
                android:divider="?android:attr/dividerHorizontal"
                android:showDividers="middle"
                android:dividerPadding="8dp">

                <!-- Section Title -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Symptom Frequency"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="@color/text_primary"
                    android:gravity="center"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginBottom="12dp" />

                <!-- Cramps -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginVertical="4dp">

                    <TextView
                        android:layout_width="80dp"
                        android:layout_height="wrap_content"
                        android:text="Cramps"
                        android:textSize="14sp"
                        android:textColor="@color/text_primary" />

                    <ProgressBar
                        android:layout_width="0dp"
                        android:layout_height="8dp"
                        android:layout_weight="1"
                        style="?android:attr/progressBarStyleHorizontal"
                        android:progress="85"
                        android:max="100"
                        android:progressTint="@color/primary"
                         />

                    <TextView
                        android:layout_width="40dp"
                        android:layout_height="wrap_content"
                        android:text="12"
                        android:textSize="14sp"
                        android:textColor="@color/primary"
                        android:gravity="end" />
                </LinearLayout>

                <!-- Headache -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginVertical="4dp">

                    <TextView
                        android:layout_width="80dp"
                        android:layout_height="wrap_content"
                        android:text="Headache"
                        android:textSize="14sp"
                        android:textColor="@color/text_primary" />

                    <ProgressBar
                        android:layout_width="0dp"
                        android:layout_height="8dp"
                        android:layout_weight="1"
                        style="?android:attr/progressBarStyleHorizontal"
                        android:progress="60"
                        android:max="100"
                        android:progressTint="@color/primary"
                         />

                    <TextView
                        android:layout_width="40dp"
                        android:layout_height="wrap_content"
                        android:text="8"
                        android:textSize="14sp"
                        android:textColor="@color/primary"
                        android:gravity="end" />
                </LinearLayout>

                <!-- Fatigue -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginVertical="4dp">

                    <TextView
                        android:layout_width="80dp"
                        android:layout_height="wrap_content"
                        android:text="Fatigue"
                        android:textSize="14sp"
                        android:textColor="@color/text_primary" />

                    <ProgressBar
                        android:layout_width="0dp"
                        android:layout_height="8dp"
                        android:layout_weight="1"
                        style="?android:attr/progressBarStyleHorizontal"
                        android:progress="70"
                        android:max="100"
                        android:progressTint="@color/primary" />

                    <TextView
                        android:layout_width="40dp"
                        android:layout_height="wrap_content"
                        android:text="9"
                        android:textSize="14sp"
                        android:textColor="@color/primary"
                        android:gravity="end" />
                </LinearLayout>

                <!-- Bloating -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginVertical="4dp">

                    <TextView
                        android:layout_width="80dp"
                        android:layout_height="wrap_content"
                        android:text="Bloating"
                        android:textSize="14sp"
                        android:textColor="@color/text_primary" />

                    <ProgressBar
                        android:layout_width="0dp"
                        android:layout_height="8dp"
                        android:layout_weight="1"
                        style="?android:attr/progressBarStyleHorizontal"
                        android:progress="45"
                        android:max="100"
                        android:progressTint="@color/primary"
                         />

                    <TextView
                        android:layout_width="40dp"
                        android:layout_height="wrap_content"
                        android:text="6"
                        android:textSize="14sp"
                        android:textColor="@color/primary"
                        android:gravity="end" />
                </LinearLayout>

                <!-- Acne -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginVertical="4dp">

                    <TextView
                        android:layout_width="80dp"
                        android:layout_height="wrap_content"
                        android:text="Acne"
                        android:textSize="14sp"
                        android:textColor="@color/text_primary" />

                    <ProgressBar
                        android:layout_width="0dp"
                        android:layout_height="8dp"
                        android:layout_weight="1"
                        style="?android:attr/progressBarStyleHorizontal"
                        android:progress="50"
                        android:max="100"
                        android:progressTint="@color/primary"
                         />

                    <TextView
                        android:layout_width="40dp"
                        android:layout_height="wrap_content"
                        android:text="7"
                        android:textSize="14sp"
                        android:textColor="@color/primary"
                        android:gravity="end" />
                </LinearLayout>

            </LinearLayout>


            <!-- Stats cards -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gap="14dp"
                android:layout_marginTop="16dp">

                <!-- Avg Cycle Length -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="12dp"
                    android:background="@drawable/card_bg_1"
                    android:gap="4dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Avg. Cycle Length"
                        android:textSize="14sp"
                        android:textStyle="bold"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="29 days"
                        android:textSize="24sp"
                        android:textColor="@color/primary"
                        android:textStyle="bold"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Based on last 3 cycles"
                        android:textSize="12sp"
                        android:textColor="@color/text_secondary"/>
                </LinearLayout>

                <!-- Most Common Mood -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="12dp"
                    android:background="@drawable/card_bg_1"
                    android:gap="10dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Most Common Mood"
                        android:textSize="14sp"
                        android:textStyle="bold"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="ðŸ˜Š"
                        android:textSize="24sp"
                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="You felt happy 15 times"
                        android:textSize="12sp"
                        android:textColor="@color/text_secondary"/>
                </LinearLayout>
            </LinearLayout>

            <!-- Symptom Correlation -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="12dp"
                android:background="@drawable/card_bg_1"
                android:layout_marginTop="16dp"
                android:gap="8dp">

                <TextView
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:text="Symptom Correlation"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="8dp"/>

                <!-- Period -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingVertical="4dp">

                    <TextView
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:layout_weight="1"
                        android:text="Period"
                        android:textSize="14sp" />

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gap="4dp">

                        <TextView
                            android:layout_height="wrap_content"
                            android:layout_width="wrap_content"
                            android:text="Cramps"
                            android:textSize="12sp"
                            android:background="@color/symptom"
                            android:textColor="@color/text_primary"
                            android:paddingHorizontal="6dp"
                            android:paddingVertical="2dp"
                            android:layout_marginEnd="4dp"/>

                        <TextView
                            android:layout_height="wrap_content"
                            android:layout_width="wrap_content"
                            android:text="Fatigue"
                            android:textSize="12sp"
                            android:background="@color/symptom"
                            android:textColor="@color/text_primary"
                            android:paddingHorizontal="6dp"
                            android:paddingVertical="2dp"/>
                    </LinearLayout>
                </LinearLayout>

                <!-- Separator -->
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/neutral_dark"/>

                <!-- Follicular -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingVertical="4dp">

                    <TextView
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:layout_weight="1"
                        android:text="Follicular"
                        android:textSize="14sp"/>

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gap="4dp">

                        <TextView
                            android:layout_height="wrap_content"
                            android:layout_width="wrap_content"
                            android:text="Energetic"
                            android:textSize="12sp"
                            android:background="@color/symptom"
                            android:textColor="@color/text_primary"
                            android:paddingHorizontal="6dp"
                            android:paddingVertical="2dp"/>
                    </LinearLayout>
                </LinearLayout>

                <!-- Separator -->
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/neutral_dark"/>

                <!-- Ovulation -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingVertical="4dp">

                    <TextView
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:layout_weight="1"
                        android:text="Ovulation"
                        android:textSize="14sp" />

                    <TextView
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:text="No common symptoms"
                        android:textSize="12sp"
                        android:textColor="@color/text_secondary"/>
                </LinearLayout>

                <!-- Separator -->
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/neutral_dark"/>

                <!-- Luteal (PMS) -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingVertical="4dp">

                    <TextView
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:layout_weight="1"
                        android:text="Luteal (PMS)"
                        android:textSize="14sp"
                        />

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gap="4dp">

                        <TextView
                            android:layout_height="wrap_content"
                            android:layout_width="wrap_content"
                            android:text="Bloating"
                            android:textSize="12sp"
                            android:background="@color/symptom"
                            android:textColor="@color/text_primary"
                            android:paddingHorizontal="6dp"
                            android:paddingVertical="2dp"/>

                        <TextView
                            android:layout_height="wrap_content"
                            android:layout_width="wrap_content"
                            android:text="Acne"
                            android:textSize="12sp"
                            android:background="@color/symptom"
                            android:textColor="@color/text_primary"
                            android:paddingHorizontal="6dp"
                            android:paddingVertical="2dp"/>

                        <TextView
                            android:layout_height="wrap_content"
                            android:layout_width="wrap_content"
                            android:text="+2"
                            android:textSize="12sp"
                            android:background="@color/symptom"
                            android:textColor="@color/text_secondary"
                            android:paddingHorizontal="6dp"
                            android:paddingVertical="2dp"/>
                    </LinearLayout>
                </LinearLayout>

            </LinearLayout>


        </LinearLayout>
    </ScrollView>

    <!-- Bottom Navigation -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:orientation="horizontal"
        android:background="@color/background_light"
        android:gravity="center"
        android:weightSum="4">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/home"
                android:contentDescription="Home"
                app:tint="@color/neutral_dark"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Home"
                android:textSize="10sp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/calendar"
                android:contentDescription="Calendar"
                app:tint="@color/neutral_dark"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Calendar"
                android:textSize="10sp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/stat"
                android:contentDescription="Stats"
                app:tint="@color/primary"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Stats"
                android:textSize="10sp"
                android:textStyle="bold"
                android:textColor="@color/primary"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/settings"
                android:contentDescription="Settings"
                app:tint="@color/neutral_dark"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Settings"
                android:textSize="10sp"/>
        </LinearLayout>

    </LinearLayout>

</LinearLayout>
